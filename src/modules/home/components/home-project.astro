---
import { sanityClient } from '~/api/sanity-api';
import { sanityImageUrl } from '~/helpers/sanity-image-url';

// TODO: Make the typing
const projects = await sanityClient.fetch('*[_type == "project"]');
---

<section class="container mx-auto px-[20px] mt-[80px]">
  <h1 class="font-bold text-[40px]">Latest Project</h1>

  <div class="flex gap-[30px] mt-[30px]">
    {
      projects.map((project) => (
        <div class="bg-gray-main relative rounded-[30px] h-[400px] w-full">
          <img
            alt=""
            src={sanityImageUrl(project.picture).url()}
            class="absolute w-full h-full object-cover rounded-[30px]"
          />

          <div class="relative p-[28px]">
            <h2 class="font-semibold text-white text-[24px]">{project.name}</h2>
            <p class="text-[12px] text-white">{project.description}</p>
          </div>
        </div>
      ))
    }
  </div>

  <div class="text-right mt-[30px]">
    <a
      href="/project"
      class="inline-flex items-center justify-center gap-[8px] font-semibold"
    >
      <span
        class="bg-gradient-to-r from-secondary to-primary inline-block text-transparent bg-clip-text"
      >
        See Other Projects
      </span>

      <span class="text-[18px] text-primary">
        <i class="ri-arrow-right-line"></i>
      </span>
    </a>
  </div>
</section>
