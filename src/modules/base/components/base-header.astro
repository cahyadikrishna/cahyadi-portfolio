---
import logo from '~/assets/images/logo-cahyadi.svg';
---

<header class="container px-[20px] fixed inset-x-0 mx-auto top-[30px] z-10">
  <div class="bg-gray-main rounded-[30px]">
    <div class="flex h-full items-center justify-between px-[30px] py-[14px]">
      <a href="/" class="logo">
        <img src={logo.src} alt="Cahyadi Krishna" class="h-[40px] w-[40px]" />
      </a>

      <nav class="hidden md:block">
        <ul class="flex gap-[40px] font-medium">
          <li class="hover:text-secondary">
            <a href="/" class="">Home</a>
          </li>

          <li class="hover:text-secondary">
            <a href="/" class="">About</a>
          </li>

          <li class="hover:text-secondary">
            <a href="/" class="">Project</a>
          </li>

          <li class="hover:text-secondary">
            <a href="/" class="">Contact</a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>
